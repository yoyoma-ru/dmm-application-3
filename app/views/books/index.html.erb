<div class="container-fuluid">
	<div class="row">
		<div class="col-xs-12">
			<%= render 'layouts/error_messages', model: @book %>
		</div>
		<%= render 'layouts/left_sidebar', user: current_user, book: @book %>
		<section class="col-xs-9">
			<h2>Books</h2>
			<table class="table">
				<thead>
				    <tr class="">
					    <th class=""></th>
					    <th class="">Title</th>
					    <th class="">Opinion</th>
				    </tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
				    	<tr class="">
					    	<td class=""><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %></td>
					    	<td class=""><%= link_to "#{book.title}", book_path(book) %></td>
					    	<td class=""><%= book.body %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		</section>
	</div>
</div>