		<div class="col-xs-3">
			<section class="">
				<h2>User info</h2>
				<table class="table">
					<thead>
						<tr class="">
							<td class="user-image">
								 <%= attachment_image_tag user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg", size:'100x100' %>
							</td>
							<td></td>
						</tr>
					</thead>
					<tbody>
						<tr class="">
							<td class="">name</td>
							<td class=""><%= user.name %></td>
						</tr>
						<tr class="">
							<td class="">introduction</td>
							<td class=""><%= user.introduction %></td>
						</tr>
					</tbody>
				</table>
				<% if user.id == current_user.id %>
					<%= link_to edit_user_path(current_user.id), class:"btn btn-default btn-block" do %>
					    <i class="fas fa-wrench"></i>
					<% end %>
				<% end %>
			</section>
			<section class="">
				<h2>New book</h2>
				<%= form_for(book) do |f| %>
				    <div class="form-group">
				    	<%= f.label :title, "Title" %>
				    	<p><%= f.text_field :title, class:"col-xs-12" %><p>
				    </div>
				    <br>
				    <div class="form-group">
				    	<%= f.label :body, "Opinion" %>
				    	<p><%= f.text_area :body, class:"col-xs-12" %></p>
				    </div>
				    <%= f.submit "Create book", class:"btn btn-primary btn-block" %>
				<% end %>
			</section>
		</div>